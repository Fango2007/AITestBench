{
  "id": "Simple_Tool_Calling",
  "version": "1.0.0",
  "name": "Simple_Tool_Calling",
  "description": "Describe the test",
  "protocols": [
    "openai_chat_completions"
  ],
  "request": {
    "method": "POST",
    "path": "/v1/chat/completions",
    "body_template": {
      "stream": "STREAM",
      "model": "MODEL",
      "max_completion_tokens": "MAX_COMPLETION_TOKEN",
      "temperature": "TEMPERATURE",
      "parallel_tool_calls": false,
      "tool_choice": "auto",
      "tools": [
        {
          "type": "function",
          "function": {
            "name": "list_paths",
            "description": "List files and directories at a given path",
            "parameters": {
              "type": "object",
              "properties": {
                "path": {
                  "type": "string",
                  "description": "Filesystem path to list"
                }
              },
              "required": [
                "path"
              ]
            }
          }
        }
      ],
      "messages": [
        {
          "role": "user",
          "content": "Call list_paths with {\"path\": \"TimeManagement\"}. Return only the tool call."
        }
      ]
    }
  },
  "assertions": [],
  "metrics": {}
}