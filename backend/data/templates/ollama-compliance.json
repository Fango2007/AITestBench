{
  "id": "ollama-compliance",
  "version": "1.0.0",
  "name": "Ollama compliance",
  "description": "Validate Ollama chat response shape.",
  "protocols": [
    "ollama"
  ],
  "request": {
    "method": "POST",
    "path": "/api/chat",
    "body_template": {
      "model": "MODEL",
      "messages": [
        {
          "role": "user",
          "content": "ping"
        }
      ]
    }
  },
  "assertions": [
    {
      "type": "json_path_exists",
      "target": "body",
      "expected": "$.message"
    }
  ],
  "metrics": {
    "ttfb": "client"
  }
}